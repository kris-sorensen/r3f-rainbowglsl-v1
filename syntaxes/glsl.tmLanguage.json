{
  "scopeName": "source.glsl",
  "fileTypes": ["ts"],
  "patterns": [
    {
      "include": "#glsl"
    }
  ],
  "repository": {
    "glsl": {
      "begin": "`",
      "end": "`",
      "patterns": [
        {
          "match": "\\b(uniform|varying|attribute|vec2|vec3|vec4|float|bool|sin|mod|void|main|gl_Position|gl_FragColor|gl_PointSize|gl_PointCoord|distance|smoothstep|step)\\b",
          "name": "keyword.glsl"
        },
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "identifier.glsl"
        },
        {
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b",
          "name": "constant.numeric.glsl"
        },
        {
          "match": "\\*",
          "name": "keyword.operator.arithmetic.glsl"
        },
        {
          "match": "=",
          "name": "keyword.operator.assignment.glsl"
        }
      ]
    }
  }
}